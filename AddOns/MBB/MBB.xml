						<AbsDimension x="56" y="56" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" />
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp","RightButtonUp");
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnMouseDown>
				MBB_MinimapButtonFrame_Texture:SetTexCoord(0,1,0,1);
			</OnMouseDown>
			<OnMouseUp>
				MBB_MinimapButtonFrame_Texture:SetTexCoord(.075,.925,.075,.925);
			</OnMouseUp>
			<OnClick>
				MBB_OnClick(button);
			</OnClick>
			<OnEnter>
				MBB_ShowTimeout = -1;
				GameTooltip:SetOwner(self, "ANCHOR_LEFT");
				GameTooltip:AddLine(MBB_ADDON_NAME);
				GameTooltip:AddLine(MBB_TOOLTIP1, 0, 1, 0);
				GameTooltip:Show();
			</OnEnter>
			<OnLeave>
				MBB_ShowTimeout = 0;
				GameTooltip:Hide();
			</OnLeave>
			<OnDragStart>
				if( MBB_Options.AttachToMinimap == 1 ) then
					MBB_DragFlag = 1;
				else
					self:StartMoving();
				end
			</OnDragStart>
			<OnDragStop>
				if( MBB_Options.AttachToMinimap == 1 ) then
					MBB_DragFlag = 0;
				else
					self:StopMovingOrSizing();
				end
				local point,_,_,xpos,ypos = self:GetPoint();
				MBB_Options.ButtonPos = {xpos,ypos};
				MBB_Options.DetachedButtonPos = point;
			</OnDragStop>
			<OnUpdate>
				MBB_OnUpdate(elapsed);
			</OnUpdate>
		</Scripts>
