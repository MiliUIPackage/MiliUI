<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Script file="about.lua"/>

    <Frame name="ExtVendorConfigAbout">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentBackground">
                    <Size>
                        <AbsDimension x="1" y="1"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="5" y="-5"/>
                            </Offset>
                        </Anchor>
                        <Anchor point="BOTTOMRIGHT">
                            <Offset>
                                <AbsDimension x="-5" y="5"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Color r="0" g="0" b="0" a="0.75"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" inherits="GameFontNormalLarge">
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="25" y="-25"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentAuthor" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
                            <Offset>
                                <AbsDimension x="15" y="-30"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentEmail" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentAuthor" relativePoint="BOTTOMLEFT">
                            <Offset>
                                <AbsDimension x="0" y="-10"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentURLs" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentEmail" relativePoint="BOTTOMLEFT">
                            <Offset>
                                <AbsDimension x="0" y="-40"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>

                <FontString name="$parentTranslatorsHeader" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
                            <Offset>
                                <AbsDimension x="15" y="-100"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>

                <FontString name="$parentLicense" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT">
                            <Offset>
                                <AbsDimension x="40" y="60"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                ExtVendorConfig_About_OnLoad(self);
            </OnLoad>
        </Scripts>
    </Frame>

</Ui>
